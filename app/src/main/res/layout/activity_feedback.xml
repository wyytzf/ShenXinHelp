<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.shenxinhelp.mySetting.Feedback">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp">
    <EditText
        android:id="@+id/feefback_content"
        android:layout_width="match_parent"
        android:layout_height="160.0dp"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:gravity="top|left"
        android:singleLine="true"
        android:background="@drawable/feedback_edit_shape"
        android:hint="您的反馈将给予我们莫大的帮助"/>

    <Button
        android:id="@+id/feedback_submit"
        android:layout_below="@id/feefback_content"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/feedback_button_shape"
        android:text="提交"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

</RelativeLayout>

</RelativeLayout>
