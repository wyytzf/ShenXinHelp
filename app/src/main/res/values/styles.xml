<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_20_pri">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_18_pri">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_16_sec">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_sec</item>
    </style>

    <style name="text_16_pri">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_14_sec">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_sec</item>
    </style>

    <style name="text_14_pri">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_12_sec">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_sec</item>
    </style>

    <style name="mypopwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

</resources>
